@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangePass</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
</head>
<body>
    <div class="p-3">
        <h2>@User.Identity.Name</h2>
        <form action="/Account/ChangePass" method="post">
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" name="pOld" placeholder="Eski Şifre">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="password" class="form-control mt-1" id="inputPassword" name="pNew" placeholder="Yeni Şifre">
                </div>
            </div>
            <div class="form-group form-check">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="/Account">Admin Sayfasına dön</a>
            </div>

        </form>
    </div>
</body>
</html>
