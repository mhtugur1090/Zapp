@model IEnumerable<Zapp.Entity.Kategori>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kategori Sayfası</title>
    <link rel="stylesheet" href="~/CSS/adminPagesStyle.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <div id="KategoriIndex" class="container-fluid clearfix">
        <header>
            <h2>
                
                <a href="/Urun/Create">Yeni Kategori oluştur</a>
                <span>
                    <a class="adminPageLink" href="/Account/Index">Admin Anasayfa</a>
                    <a class="adminPageLink" href="/Account/Logout">Çıkış</a>
                </span>
            </h2>
        </header>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                    
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id},new { @class = "btn btn-success buton-güncelle" }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger buton-sil" })
                    </td>
                </tr>
            }

        </table>

    </div>
</body>
</html>
